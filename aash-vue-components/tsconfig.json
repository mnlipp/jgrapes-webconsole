{
  "compilerOptions": {
    "declarationDir": "lib",
    "target": "es2015",
    "module": "es2015",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "src/tsdoc-index.ts"]
}
